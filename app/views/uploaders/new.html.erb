<div class="container">   
<% if !@uploader.errors.empty? %>   
   <div>   
         
      <ul>   
         <% @uploader.errors.full_messages.each do |msg| %>   
            <li><%= msg %></li>   
         <% end %>   
<% end %>    
   <%= form_for @uploader, html: { multipart: true,class: "form-horizontal" } do |f| %>   
      <div class="row">
         <div class="col-md-10">
            <div class="form-group">
               <%= f.label :title , :class => "col-sm-4 control-label" %>   
               <%= f.text_field :title %>  
            </div> 
            <div class="form-group">   
               <%= f.label :Description, :class => "col-sm-4 control-label" %>   
               <%= f.text_field :description %>   
            </div>
            <div class="form-group">
               <%= f.label :Tags ,:class => "col-sm-4 control-label"%>   
               <%= f.text_field :tags, :class => "col-sm-6 control-label", :placeholder => "Enter Comma Seperated Values Like: pdf,jpg,etc" %>   
            </div>  
            <div class="form-group">
               <%= f.label :attachment, :class => "col-sm-4 control-label" %>   
               <%= f.file_field :attachment %>   
               <br>  
            </div> 
            <div class="form-group text-left">
               <%= f.submit "Save" , :class => " col-sm-2 btn btn-primary form-control" %> 
            </div>  
         </div>  
      </div>  
   <% end %>   
</div>   
</div>  